{% extends 'base.html.twig' %}

{% block title %}Emprunts{% endblock %}

{% block body %}
    <h1>Liste des emprunts</h1>

    <table id="table_id" class="table">
        <thead>
            <tr>

                <th>LocationDate</th>
                <th>ReturnStatus</th>
                <th>Term</th>
                <th>Observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rental in rentals %}
            <tr>

                <td>{{ rental.locationDate ? rental.locationDate|date('Y-m-d') : '' }}</td>
                <td>{{ rental.returnStatus ? 'Yes' : 'No' }}</td>
                <td>{{ rental.term }}</td>
                <td>{{ rental.observation }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('rental_show', {'id': rental.id}) }}"><i class="fas fa-search"></i></a>
                    <a class="btn btn-primary" href="{{ path('rental_edit', {'id': rental.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('rental_new') }}">Nouvel emprunt</a>
{% endblock %}

{% block javascript %}
  <script>
    $(document).ready( function () {
      $('#table_id').DataTable();
    } );
  </script>
{% endblock %}
