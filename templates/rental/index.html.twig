{% extends 'base.html.twig' %}

{% block title %}Rental index{% endblock %}

{% block body %}
    <h1>Rental index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LocationDate</th>
                <th>ReturnStatus</th>
                <th>Term</th>
                <th>Observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rental in rentals %}
            <tr>
                <td>{{ rental.id }}</td>
                <td>{{ rental.locationDate ? rental.locationDate|date('Y-m-d') : '' }}</td>
                <td>{{ rental.returnStatus ? 'Yes' : 'No' }}</td>
                <td>{{ rental.term }}</td>
                <td>{{ rental.observation }}</td>
                <td>
                    <a href="{{ path('rental_show', {'id': rental.id}) }}">show</a>
                    <a href="{{ path('rental_edit', {'id': rental.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rental_new') }}">Create new</a>
{% endblock %}
