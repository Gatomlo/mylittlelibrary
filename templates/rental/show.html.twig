{% extends 'base.html.twig' %}

{% block title %}Emprunt{% endblock %}

{% block body %}
<!-- En-tête + menu de page -->
  <div class="row g-3 mb-4 align-items-center justify-content-between">
    <div class="col-auto">
          <h1 class="app-page-title mb-0">Emprunt</h1>
    </div>
    <div class="col-auto">
       <div class="page-utilities">
        <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
          <div class="col-auto">
            <a class="btn btn-primary text-light" href="{{ path('rental_edit', {'id': rental.id}) }}"><i class="fas fa-edit"></i></i></a>
          </div>
          <div class="col-auto">
            <a class="btn btn-primary text-light" href="{{ path('rental_index') }}"><i class="fas fa-long-arrow-alt-left"></i></a>
          </div>
          <div class="col-auto">
            {{ include('rental/_delete_form.html.twig') }}
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- Fin en-tête + menu de page -->

    <table class="table">
        <tbody>
            <tr>
                <th>Emprunteur</th>
                <td><a href="{{ path('borrower_show', {'id': rental.borrower.id}) }}">{{rental.borrower.fullName}}</a></td>
            </tr>
            <tr>
                <th>Date d'emprunt</th>
                <td>{{ rental.locationDate ? rental.locationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ rental.returnStatus ? '<span class="badge bg-danger">Clôturé</span>' : '<span class="badge bg-success">En cours</span>' }}</td>
            </tr>
            <tr>
                <th>Remarques</th>
                <td>{{ rental.observation }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Livres empruntés</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Code</th>
          <th>Titre</th>
          <th>Date prévue</th>
          <th>Rendu le</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      {% for rental in rental.bookRentals %}
        <tr>
          <td>{{rental.book.code}}</td>
          <td><a href="{{path('book_show',{'id':rental.book.id})}}">{{rental.book.title}}</a></td>
          <td>{{rental.dueDate|date("d/m/Y")}}</td>
          <td class="returnDate">
            {% if rental.returnDate is not null %}
              {{rental.returnDate|date("d/m/Y")}}
            {% else %}
              Non rendu
            {% endif %}
          </td>
          {% if rental.returnDate is null %}
            <td><button data-id={{rental.id}} class="btn btn-primary returnButton text-light"><i class="fas fa-arrow-down"></i></button></td>
          {% else %}
          <td></td>
          {% endif %}
        </tr>
      {% endfor %}
      </tbody>
    </table>
    </br>
{% endblock %}
{% block javascript %}
  <script>
    $(".returnButton").click(function() {
      var currentId = $(this).data('id')
      var url = "{{ path('return',{'id':'currentId'})}}";
      url = url.replace('currentId', currentId);
      var actualButton = $(this)
      $.getJSON( url, function( json ) {})
        .done(function(data) {
          $(actualButton).parent().parent().find(".returnDate").html("{{'now'|date("d/m/Y")}}")
          $(actualButton).remove();
        })
    })
  </script>
{% endblock %}
