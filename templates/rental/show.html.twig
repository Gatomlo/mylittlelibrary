{% extends 'base.html.twig' %}

{% block title %}Rental{% endblock %}

{% block body %}
    <h1>Rental</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rental.id }}</td>
            </tr>
            <tr>
                <th>LocationDate</th>
                <td>{{ rental.locationDate ? rental.locationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ReturnStatus</th>
                <td>{{ rental.returnStatus ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Term</th>
                <td>{{ rental.term }}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ rental.observation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rental_index') }}">back to list</a>

    <a href="{{ path('rental_edit', {'id': rental.id}) }}">edit</a>

    {{ include('rental/_delete_form.html.twig') }}
{% endblock %}
