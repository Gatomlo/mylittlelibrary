{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}

    <!-- En-tête + menu de page -->
      <div class="row g-3 mb-4 align-items-center justify-content-between">
        <div class="col-auto">
              <h1 class="app-page-title mb-0">Fiche livre</h1>
        </div>
        <div class="col-auto">
           <div class="page-utilities">
            <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
              <div class="col-auto">
                <a class="btn btn-primary text-light" href="{{ path('book_edit', {'id': book.id}) }}"><i class="fas fa-edit"></i></i></a>
              </div>
              <div class="col-auto">
                <a class="btn btn-primary text-light" href="{{ path('book_index') }}"><i class="fas fa-long-arrow-alt-left"></i></a>
              </div>
              <div class="col-auto">
                {{ include('book/_delete_form.html.twig') }}
              </div>
            </div>
          </div>
        </div>
      </div>
    <!-- Fin en-tête + menu de page -->
    <h1 class="app-page-title mb-0">{{ book.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Couverture</th>
                <td><img src="{{ book.image }}"></td>
            </tr>
            <tr>
                <th>Auteur(s)</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ book.ISBN }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ book.code }}</td>
            </tr>
            <tr>
                <th>Propriétaire</th>
                <td>{{ book.owner }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ book.shelf }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ book.abstract }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ book.paging }} pages</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ book.editor }}</td>
            </tr>
            <tr>
                <th>Prix neuf</th>
                <td>{{ book.price }} €</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ book.language }}</td>
            </tr>
        </tbody>
    </table>

    <h3>Historique</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Emprunteur</th>
          <th>Date d'emprunt</th>
          <th>Retour prévu</th>
          <th>Date de retour</th
          <th></th>
        </tr>
      </thead>
      <tbody>
          {%for bookRental in book.bookRentals %}
            <tr>
              <td><a href="{{ path('borrower_show', {'id': bookRental.rental.borrower.id}) }}">{{bookRental.rental.borrower.fullName}}</a></td>
              <td>{{bookRental.rental.locationDate|date('d-m-Y')}}</td>
              <td>{{bookRental.dueDate|date('d-m-Y')}}</td>
              {% if bookRental.returnDate is not null%}
                <td>{{bookRental.returnDate|date('d-m-Y') }}</td>
              {% else %}
                <td><span class="badge bg-danger"> Non rendu !</span></td>
              {% endif %}
              <td><a class="btn btn-primary text-light" href="{{ path('rental_show', {'id': bookRental.id}) }}"><i class="fas fa-eye"></i></a></td>
            </tr>
          {% endfor %}
      </tbody>
    </table>
{% endblock %}
