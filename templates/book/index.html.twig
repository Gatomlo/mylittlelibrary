{% extends 'base.html.twig' %}

{% block title %}Livres{% endblock %}

{% block body %}

    <h1>Liste des livres</h1>

    <table id="table_id" class="display" class="table">
        <thead>
            <tr>
                <th>Couverture</th>
                <th>Titre</th>
                <th>Auteur(s)</th>
                <th>Editor</th>
                <th>Localisation</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td><img src="{{ book.image }}"></td>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.editor }}</td>
                <td>{{ book.shelf }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('book_show', {'id': book.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="btn btn-primary" href="{{ path('book_edit', {'id': book.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('book_new') }}">Nouveau livre</a>



{% endblock %}

{% block javascript %}
  <script>
    $(document).ready( function () {
      $('#table_id').DataTable();
    } );
  </script>
{% endblock %}
