{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Image</th>
                <th>Code</th>
                <th>Owner</th>
                <th>Shelf</th>
                <th>Abstract</th>
                <th>Paging</th>
                <th>Editor</th>
                <th>Price</th>
                <th>Language</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.ISBN }}</td>
                <td><img src="{{ book.image }}"></td>
                <td>{{ book.code }}</td>
                <td>{{ book.owner }}</td>
                <td>{{ book.shelf }}</td>
                <td>{{ book.abstract }}</td>
                <td>{{ book.paging }} pages </td>
                <td>{{ book.editor }}</td>
                <td>{{ book.price }}</td>
                <td>{{ book.language }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
{% endblock %}
