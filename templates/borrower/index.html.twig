{% extends 'base.html.twig' %}

{% block title %}Emprunteurs{% endblock %}

{% block body %}
    <h1>Liste des emprunteurs</h1>

    <table id="table_id" class="table">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Téléphone</th>
                <th>Implantation</th>
                <th>Département</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for borrower in borrowers %}
            <tr>
                <td>{{ borrower.firstname }}</td>
                <td>{{ borrower.lastname }}</td>
                <td>{{ borrower.mail }}</td>
                <td>{{ borrower.phone }}</td>
                <td>{{ borrower.implantation }}</td>
                <td>{{ borrower.department }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('borrower_show', {'id': borrower.id}) }}"><i class="fas fa-search"></i></a>
                    <a class="btn btn-primary" href="{{ path('borrower_edit', {'id': borrower.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('borrower_new') }}">Nouvel emprunteur</a>
{% endblock %}

{% block javascript %}
  <script>
    $(document).ready( function () {
      $('#table_id').DataTable();
    } );
  </script>
{% endblock %}
